<style>
  #mini-cart{
    width: 30%;
    height: 100vh;
    position: fixed;
    right: 0;
    top: 85px;
    background-color: peachpuff;
    z-index: 5;
    transform: translateX(100%);
    transition: all 0.8s 0s ease;
  }
  #mini-cart.active{
    transform: translateX(0%);
  }
  .cart__header{
    padding: 2rem 1rem;
    position: relative;
  }
  .cart__close{
    font-size: 20px;
    cursor: pointer;
    position: absolute;
    top: 2rem;
    right: 1rem;
  }
</style>

<div id="mini-cart" class="{{ section.id}}">
  <div class="cart__header">
    <h2>Carrito Custom</h2>
    <span id="close-cart" class="cart__close">[x]</span>
  </div>
  {{cart.items }}
  {%- for item in cart.items -%}
    <div id="cart-notification-product-{{ item.id }}" class="cart-item">
      {% if item.image %}
        <img class="cart-notification-product__image"
          src="{{ item.image | img_url: '140x' }}"
          alt="{{ item.image.alt | escape }}"
          width="70"
          height="{{ 70 | divided_by: item.image.aspect_ratio | ceil }}"
          loading="lazy"
        >
      {% endif %}
      <div>
        <h3 class="cart-notification-product__name h4">{{ item.product.title | escape }}</h3>
        {%- unless item.product.has_only_default_variant -%}
          <dl>
            {%- for option in item.options_with_values -%}
              <div class="product-option">
                <dt>{{ option.name }}: </dt>
                <dd>{{ option.value }}</dd>
              </div>
            {%- endfor -%}
          </dl>
        {%- endunless -%}
        {%- if item.selling_plan_allocation != nil -%}
          <p class="product-option">{{ item.selling_plan_allocation.selling_plan.name }}</p>
        {%- endif -%}
      </div>
    </div>
  {%- endfor -%}
</div>

<script>
  let closeCart = document.getElementById('close-cart')
  closeCart.addEventListener("click", () => {
    let cart = document.getElementById('mini-cart')
    cart.classList.toggle('active')
  })
</script>